{
    "hooks": {
        "after:bump": [
            "npm install; npm run build -w ./;"
        ]
    },
    "git": {
        "addUntrackedFiles": true,
        "commitMessage": "chore: release ${version}",
        "requireCommits": true,
        "requireBranch": ["main", "*.*.x"],
        "requireCleanWorkingDir ": false
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "npm": {
        "publishPath": "./reporters",
        "skipChecks": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "header": "# Changelog",
            "preset": "conventionalcommits",
            "infile": "CHANGELOG.md",
            "strictSemVer": true
        },
        "@release-it-plugins/workspaces": {
            "skipChecks": true,
            "workspaces": [
                "reporters"
            ],
            "additionalManifests": {
                "versionUpdates": [
                    "reporters/package.json"
                ]
            }
        }
    }
}